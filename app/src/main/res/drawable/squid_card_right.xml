<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:top="50px" android:shape="rectangle">

            <solid  android:color="#99D1D1D1"></solid>
            <corners
                android:bottomRightRadius="4dp" />
        </shape>
    </item><!-- default -->
    <item android:left="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:color="#44FFFFFF" android:width="1dp"></stroke>
            <corners
                android:bottomRightRadius="4dp" />
        </shape>
    </item>
</layer-list>