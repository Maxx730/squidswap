<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinghorn.app.squidfaceswap.SquidSwapMain">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_pick_green"
        android:padding="0dp">

        <FrameLayout
            android:id="@+id/opening_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_back">

            <ImageView
                android:id="@+id/tap_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".2"
                android:padding="50dp"
                app:srcCompat="@drawable/ic_add_box_black_24dp" />

            <TextView
                android:id="@+id/tap_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="90dp"
                android:alpha=".05"
                android:text="Tap to open Image"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/focused_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/save_changes_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_save_black_24dp" />

                <ImageButton
                    android:id="@+id/restart_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_history_black_24dp" />

                <ImageButton
                    android:id="@+id/settings_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    android:elevation="11dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_settings_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fullscreen_content_controls"
                style="?metaButtonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="bottom"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <ImageButton
                    android:id="@+id/main_menu_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_arrow_drop_up_black_24dp" />

                <ImageButton
                    android:id="@+id/image_btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:background="@drawable/squid_ui_btn"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_folder_black_24dp" />

                <ImageButton
                    android:id="@+id/main_swap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_rotate_left_black_24dp" />

                <ImageButton
                    android:id="@+id/main_crop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_crop_black_24dp" />

                <ImageButton
                    android:id="@+id/main_paint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_squid_draw" />

                <ImageButton
                    android:id="@+id/main_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_resize_img" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_back"
            android:padding="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/close_main_menu"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_close_image_crop_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/camera_capture2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_camera_black_24dp" />

                <ImageButton
                    android:id="@+id/meme_gen"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_text_format_black_24dp" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
