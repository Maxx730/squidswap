<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simple_dashed"
    tools:context="com.kinghorn.app.squidfaceswap.SquidSwapMain">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tools_overview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/save_changes_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_squid_button"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_save_black_24dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/uri_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@android:color/background_light"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/focused_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/checkered_background"
                    android:padding="10dp"
                    app:srcCompat="@drawable/defaultphoto" />

                <Button
                    android:id="@+id/main_swap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/squid_ui_btn"
                    android:paddingLeft="20dp"
                    android:text="Swap"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/main_scale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/squid_ui_btn"
                    android:paddingLeft="20dp"
                    android:text="Scale"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/main_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/squid_ui_btn"
                    android:paddingLeft="20dp"
                    android:text="Crop"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/main_paint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/squid_ui_btn"
                    android:paddingLeft="20dp"
                    android:text="Paint"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:paddingTop="20dp"
                    android:text="SquidSwap Version 0.50 Beta"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/legal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="Property of covfefe Inc. LLC Conglormourate"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="9sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/black_overlay"
        android:gravity="bottom"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/image_btn_one"
            style="@style/Widget.Design.Snackbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/squid_ui_btn"
            android:text="@string/choose_btn_one"
            android:textColor="@android:color/background_light" />

        <ImageButton
            android:id="@+id/settings_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@drawable/squid_ui_btn"
            android:elevation="11dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_settings_black_24dp" />

    </LinearLayout>

</FrameLayout>
