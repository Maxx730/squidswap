<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simple_dashed"
    tools:context="com.kinghorn.app.squidfaceswap.SquidSwapMain">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/checkered_background">

        <ImageView
            android:id="@+id/focused_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:srcCompat="@drawable/defaultphoto" />

        <ImageButton
            android:id="@+id/settings_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_squid_button"
            android:elevation="11dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_settings_black_24dp" />

        <ImageButton
            android:id="@+id/save_changes_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_squid_button"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_save_black_24dp" />

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/image_btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@drawable/round_squid_button"
                app:srcCompat="@drawable/ic_folder_black_24dp" />

            <ImageButton
                android:id="@+id/main_swap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@drawable/round_squid_button"
                app:srcCompat="@drawable/ic_rotate_left_black_24dp" />

            <ImageButton
                android:id="@+id/main_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_squid_button"
                app:srcCompat="@drawable/ic_crop_black_24dp" />

            <ImageButton
                android:id="@+id/main_paint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_squid_button"
                app:srcCompat="@drawable/ic_squid_draw" />

            <ImageButton
                android:id="@+id/main_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_squid_button"
                app:srcCompat="@drawable/ic_resize_img" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
