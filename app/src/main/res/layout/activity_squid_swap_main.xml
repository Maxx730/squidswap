<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinghorn.app.squidfaceswap.SquidSwapMain">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_pick_green"
        android:padding="0dp">

        <FrameLayout
            android:id="@+id/opening_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_back">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0dp"
                android:alpha=".3"
                android:rotation="180"
                app:srcCompat="@drawable/spots" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="60dp"
                android:layout_marginRight="0dp"
                android:alpha=".3"
                android:rotation="270"
                app:srcCompat="@drawable/spots" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha=".3"
                app:srcCompat="@drawable/spots" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginTop="60dp"
                android:alpha=".3"
                android:rotation="90"
                app:srcCompat="@drawable/spots" />

            <ImageView
                android:id="@+id/tap_image"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/path4831"
                android:paddingBottom="120dp"
                android:paddingLeft="90dp"
                android:paddingRight="90dp"
                android:paddingTop="120dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/focused_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tap_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/tap_to_open"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:typeface="sans"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/save_changes_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_save_black_24dp" />

                <ImageButton
                    android:id="@+id/restart_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_history_black_24dp" />

                <ImageButton
                    android:id="@+id/settings_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    android:elevation="11dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_settings_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fullscreen_content_controls"
                style="?metaButtonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="bottom"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <ImageButton
                    android:id="@+id/main_menu_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_arrow_drop_up_black_24dp" />

                <ImageButton
                    android:id="@+id/image_btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:background="@drawable/squid_ui_btn"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_folder_black_24dp" />

                <ImageButton
                    android:id="@+id/main_swap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_rotate_left_black_24dp" />

                <ImageButton
                    android:id="@+id/main_crop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_crop_black_24dp" />

                <ImageButton
                    android:id="@+id/main_paint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squid_ui_btn"
                    app:srcCompat="@drawable/ic_squid_draw" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_back"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:paddingTop="7dp"
                    android:text="Main Menu"
                    android:textColor="@android:color/background_light" />

                <ImageButton
                    android:id="@+id/close_main_menu"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_close_image_crop_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/settings_slide_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_back"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:paddingTop="7dp"
                    android:text="Preferences"
                    android:textColor="@android:color/background_light"
                    android:textColorHighlight="@android:color/background_light"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/close_settings_slider"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_close_image_crop_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/settings_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
