<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_overlay"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/color_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_white"
            android:gravity="center_horizontal"
            android:tag="#F5F5F5">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_black"
            android:gravity="center_horizontal"
            android:tag="#454544">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_purple"
            android:gravity="center_horizontal"
            android:tag="#8D5FDE">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_orange"
            android:gravity="center_horizontal"
            android:tag="#DEAA41">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_green"
            android:gravity="center_horizontal"
            android:tag="#AFDE59">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick"
            android:gravity="center_horizontal"
            android:tag="#de3d3d">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_blue"
            android:gravity="center_horizontal"
            android:tag="#257EDE">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginTop="75dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            app:backgroundTint="@color/cardview_light_background"
            app:elevation="2dp"
            app:srcCompat="@drawable/arrow_left" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            app:backgroundTint="@color/cardview_light_background"
            app:elevation="2dp"
            app:srcCompat="@drawable/ic_history_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/brush_size_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            app:backgroundTint="@color/cardview_light_background"
            app:elevation="2dp"
            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/brush_size_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            app:backgroundTint="@color/cardview_light_background"
            app:elevation="2dp"
            app:srcCompat="@drawable/ic_do_not_disturb_on_black_24dp" />

    </LinearLayout>
</FrameLayout>