<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/color_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_white"
            android:gravity="center_horizontal"
            android:tag="#F5F5F5">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_black"
            android:gravity="center_horizontal"
            android:tag="#454544">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_purple"
            android:gravity="center_horizontal"
            android:tag="#8D5FDE">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_orange"
            android:gravity="center_horizontal"
            android:tag="#DEAA41">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_green"
            android:gravity="center_horizontal"
            android:tag="#AFDE59">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick"
            android:gravity="center_horizontal"
            android:tag="#de3d3d">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:alpha=".5"
            android:background="@drawable/color_pick_blue"
            android:gravity="center_horizontal"
            android:tag="#257EDE">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:gravity="right"
        android:orientation="vertical"
        android:weightSum="1">

        <SeekBar
            android:id="@+id/brush_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blur_seeker"
            android:padding="0dp"
            android:paddingLeft="10dp" />

        <ImageButton
            android:id="@+id/paint_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_squid_button"
            app:srcCompat="@drawable/ic_history_black_24dp" />
    </LinearLayout>
</LinearLayout>